# Environment Variables Configuration
# Salin file ini menjadi .env dan isi dengan nilai yang sesuai

# OpenRouter API Key
# Dapatkan dari: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_api_key_here

# Server Configuration
PORT=3000

# Security Configuration (Optional)
# RATE_LIMIT_WINDOW=60000
# MAX_REQUESTS_PER_WINDOW=20
# MAX_MESSAGE_LENGTH=2000

# Production Settings (Uncomment untuk production)
# NODE_ENV=production
# ALLOWED_ORIGINS=https://yourdomain.com

# ===================================
# ADMIN PANEL CONFIGURATION
# ===================================
# KEEP THESE CREDENTIALS SECRET!
# These are production-ready values - DO NOT SHARE!

# Admin username for panel access
ADMIN_USERNAME=admin

# Admin password - STRONG PASSWORD CONFIGURED!
ADMIN_PASSWORD=Nekokawai69-

# Secret path for admin panel (RANDOMIZED for security)
# This path is intentionally obfuscated
ADMIN_SECRET_PATH=/admin-dashboard-7f3e9b2a1c8d4f6e

# ===================================
# HTTPS/TLS CONFIGURATION
# ===================================
# Enable HTTPS in production (set to true)
ENABLE_HTTPS=false

# Path to SSL certificate files (for HTTPS)
# Generate using: npm run generate-cert
SSL_KEY_PATH=./ssl/server.key
SSL_CERT_PATH=./ssl/server.cert

# Force HTTPS redirect (redirect HTTP to HTTPS)
FORCE_HTTPS=false
